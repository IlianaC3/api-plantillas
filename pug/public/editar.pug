include layouts/header.pug
div(id="accionEditar" class="row")
    h3(class="col-sm-12") Editar producto
    div(class="row")
        div(class="col-sm-6")
            a(href="/") Regresar
    form
        div(class="row")
            div(class="col")
                input(type="hidden" id="id" name="id" value=data.id)
                input(type="text" class="form-control" name="title" id="titleE" value=data.title placeholder="Ingrese nombre del producto")
            div(class="col")
                input(type="number" class="form-control" name="price" id="priceE" value=data.price placeholder="Ingrese precio del producto")
        hr
        div(class="row")
            div(class="col")
                input(type="url" class="form-control" name="thumbnail" id="thumbnailE" value=data.thumbnail placeholder="Ingrese imagen del producto")
            div(class="col")
                input(type="button" class="col-sm-4 btn btn-primary" value="Enviar" onclick="EnviarDatosEditar()")
include layouts/footer.pug
